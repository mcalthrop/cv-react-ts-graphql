{
  "name": "cv-react-ts-graphql",
  "version": "1.0.0",
  "description": "Online CV for Matt Calthrop, using React, TypeScript & GraphQL",
  "type": "module",
  "repository": "git@github.com:mcalthrop/cv-react-ts-graphql.git",
  "author": "Matt Calthrop <matt@calthrop.com>",
  "license": "MIT",
  "packageManager": "pnpm@9.12.2",
  "engines": {
    "node": "22.x",
    "pnpm": "9.12.2",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm"
  },
  "scripts": {
    "build": "pnpm graphql:types && next build",
    "compile": "pnpm graphql:types && tsc",
    "fix": "pnpm lint:fix && pnpm format:fix",
    "format": "pnpm prettier . --check",
    "format:fix": "pnpm prettier . --write",
    "graphql:types": "graphql-codegen --verbose && scripts/fix-generated-graphql-types.sh",
    "knip": "pnpm graphql:types && knip",
    "lint": "oxlint . --type-aware --deny-warnings",
    "lint:fix": "pnpm lint --fix",
    "prepare": "husky",
    "start:dev": "pnpm graphql:types && next dev",
    "start:prod": "pnpm build && next start",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@apollo/client": "4.0.7",
    "@apollo/client-integration-nextjs": "0.14.0",
    "@chakra-ui/react": "3.27.1",
    "@emotion/react": "11.14.0",
    "@vercel/analytics": "1.5.0",
    "@vercel/speed-insights": "1.2.0",
    "graphql": "16.11.0",
    "next": "15.5.5",
    "next-themes": "0.4.6",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-icons": "5.5.0",
    "rxjs": "7.8.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "6.0.0",
    "@graphql-codegen/client-preset": "5.1.0",
    "@graphql-typed-document-node/core": "3.2.0",
    "@next/bundle-analyzer": "15.5.5",
    "@testing-library/dom": "10.4.1",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.0",
    "@types/node": "24.8.1",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "husky": "9.1.7",
    "jsdom": "27.0.1",
    "knip": "5.66.1",
    "msw": "2.11.5",
    "oxlint": "1.23.0",
    "oxlint-tsgolint": "0.2.0",
    "prettier": "3.6.2",
    "typescript": "5.9.3",
    "vitest": "3.2.4"
  }
}
