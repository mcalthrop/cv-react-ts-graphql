{
  "name": "cv-react-ts-graphql",
  "version": "1.0.0",
  "description": "Online CV for Matt Calthrop, using React, TypeScript & GraphQL",
  "type": "module",
  "main": "index.js",
  "repository": "git@github.com:mcalthrop/cv-react-ts-graphql.git",
  "author": "Matt Calthrop <matt@calthrop.com>",
  "license": "MIT",
  "packageManager": "pnpm@9.12.2",
  "engines": {
    "node": "20.19.3",
    "pnpm": "9.12.2",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm"
  },
  "scripts": {
    "build": "pnpm graphql:types && next build",
    "compile": "pnpm graphql:types && tsc",
    "fix": "pnpm lint:fix && pnpm format:fix",
    "format": "pnpm prettier . --check",
    "format:fix": "pnpm prettier . --write",
    "graphql:types": "graphql-codegen --verbose && scripts/fix-generated-graphql-types.sh",
    "lint": "eslint .",
    "lint:fix": "pnpm lint --fix --quiet",
    "prepare": "husky",
    "start:dev": "pnpm graphql:types && next dev",
    "start:prod": "pnpm build && next start",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@apollo/client": "4.0.3",
    "@apollo/client-integration-nextjs": "0.13.0",
    "@chakra-ui/react": "3.25.0",
    "@emotion/react": "11.14.0",
    "@vercel/analytics": "1.5.0",
    "@vercel/speed-insights": "1.2.0",
    "graphql": "16.11.0",
    "next": "15.5.2",
    "next-themes": "0.4.6",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-icons": "5.5.0",
    "rxjs": "7.8.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "5.0.7",
    "@graphql-codegen/client-preset": "4.8.3",
    "@graphql-typed-document-node/core": "3.2.0",
    "@jest/globals": "30.1.2",
    "@mswjs/http-middleware": "0.10.3",
    "@next/eslint-plugin-next": "15.5.2",
    "@testing-library/dom": "10.4.1",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/jest": "30.0.0",
    "@types/node": "24.3.0",
    "@types/react": "19.1.12",
    "@types/react-dom": "19.1.9",
    "@typescript-eslint/eslint-plugin": "8.41.0",
    "@typescript-eslint/parser": "8.41.0",
    "eslint": "9.34.0",
    "eslint-plugin-jest-dom": "5.5.0",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-unused-imports": "4.2.0",
    "globals": "16.3.0",
    "husky": "9.1.7",
    "identity-obj-proxy": "3.0.0",
    "jest": "30.1.3",
    "jest-environment-jsdom": "30.1.2",
    "jsdom": "26.1.0",
    "msw": "2.10.5",
    "prettier": "3.6.2",
    "prettier-plugin-organize-imports": "4.2.0",
    "ts-jest": "29.4.1",
    "ts-node": "10.9.2",
    "typescript": "5.9.2",
    "typescript-eslint": "8.41.0",
    "whatwg-fetch": "3.6.20"
  }
}
