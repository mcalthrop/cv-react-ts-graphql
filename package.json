{
  "name": "cv-react-ts-graphql",
  "version": "1.0.0",
  "description": "Online CV for Matt Calthrop, using React, TypeScript & GraphQL",
  "main": "index.js",
  "repository": "git@github.com:mcalthrop/cv-react-ts-graphql.git",
  "author": "Matt Calthrop <matt@calthrop.com>",
  "license": "MIT",
  "engines": {
    "node": "16.15.1",
    "yarn": "1.22.19"
  },
  "scripts": {
    "prebuild": "yarn compile",
    "build": "vite build",
    "checkNodeVersion": "echo Node version: `cat .nvmrc`",
    "compile": "tsc",
    "fix": "yarn lint:fix && yarn prettier:fix",
    "graphql:types": "graphql-codegen --config codegen.yml && npm run prettier:fix",
    "lint": "eslint . --env-info",
    "lint:fix": "yarn lint --fix --quiet",
    "prepare": "husky install",
    "prettier": "yarn prettier:run --check",
    "prettier:fix": "yarn prettier:run --write --loglevel=error",
    "prettier:run": "prettier '*.{js,ts}' 'src/**/*.{js,jsx,ts,tsx}'",
    "start:dev": "vite",
    "start:preview": "vite preview",
    "test": "jest",
    "test:watch": "yarn test --watch"
  },
  "dependencies": {
    "@apollo/client": "^3.7.16",
    "@chakra-ui/react": "^2.6.0",
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "framer-motion": "^10.12.16",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.4",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.21.4",
    "@graphql-codegen/cli": "^3.3.1",
    "@graphql-codegen/typescript": "^3.0.4",
    "@graphql-codegen/typescript-operations": "^4.0.0",
    "@graphql-codegen/typescript-react-apollo": "^3.3.7",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.3.1",
    "@types/react": "^18.2.8",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vitejs/plugin-react": "^3.0.1",
    "babel-jest": "^29.5.0",
    "eslint": "^8.41.0",
    "eslint-plugin-jest-dom": "^4.0.3",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "graphql": "^16.6.0",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "prettier": "^2.8.7",
    "prettier-plugin-organize-imports": "^3.2.2",
    "react-test-renderer": "^18.2.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "vite": "^4.3.9"
  }
}
