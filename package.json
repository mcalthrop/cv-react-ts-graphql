{
  "name": "cv-react-ts-graphql",
  "version": "1.0.0",
  "description": "Online CV for Matt Calthrop, using React, TypeScript & GraphQL",
  "type": "module",
  "repository": "git@github.com:mcalthrop/cv-react-ts-graphql.git",
  "author": "Matt Calthrop <matt@calthrop.com>",
  "license": "MIT",
  "packageManager": "pnpm@9.12.2",
  "engines": {
    "node": "22.x",
    "pnpm": "9.12.2",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm"
  },
  "scripts": {
    "build": "pnpm graphql:types && next build",
    "compile": "pnpm graphql:types && tsc",
    "check": "biome check",
    "check:fix": "biome check --write",
    "graphql:types": "graphql-codegen --verbose && scripts/fix-generated-graphql-types.sh",
    "knip": "pnpm graphql:types && knip",
    "prepare": "husky",
    "start:dev": "pnpm graphql:types && next dev",
    "start:prod": "pnpm build && next start",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@apollo/client": "4.1.2",
    "@apollo/client-integration-nextjs": "0.14.4",
    "@chakra-ui/react": "3.31.0",
    "@emotion/react": "11.14.0",
    "@vercel/analytics": "1.6.1",
    "@vercel/speed-insights": "1.3.1",
    "graphql": "16.12.0",
    "next": "16.1.2",
    "next-themes": "0.4.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-icons": "5.5.0",
    "rxjs": "7.8.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.4",
    "@graphql-codegen/cli": "6.1.1",
    "@graphql-codegen/client-preset": "5.2.2",
    "@graphql-typed-document-node/core": "3.2.0",
    "@next/bundle-analyzer": "16.1.6",
    "@testing-library/dom": "10.4.1",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.2",
    "@types/node": "24.10.13",
    "@types/react": "19.2.9",
    "@types/react-dom": "19.2.3",
    "@vitest/coverage-v8": "4.0.18",
    "@vitest/ui": "4.0.18",
    "happy-dom": "20.7.0",
    "husky": "9.1.7",
    "knip": "5.84.1",
    "msw": "2.12.10",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  }
}
